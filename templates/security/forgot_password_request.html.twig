{# templates/security/forgot_password_request.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">Mot de passe oublié</h2>
                </div>
                <div class="card-body p-4">
                    {{ form_start(requestForm) }}
                        <div class="mb-4">
                            {{ form_label(requestForm.email, 'Votre adresse email', {
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                            {{ form_widget(requestForm.email, {
                                'attr': {'class': 'form-control form-control-lg'}
                            }) }}
                            <div class="form-text mt-1">
                                Entrez votre email pour recevoir un lien de réinitialisation
                            </div>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg">
                                Envoyer l'email de réinitialisation
                            </button>
                        </div>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}