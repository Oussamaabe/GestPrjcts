<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        {% if app.request.attributes.get('_route') not in ['app_login', 'app_register', 'app_authenticator_verify', 'app_authenticator_pair'] %}
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_dashboard') }}">Dashboard</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li>
        
         <a class="nav-link" href="{{ path('app_group_index') }}">Gerer les groupes</a>
        </li>
    {% endif %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
        </li>
          </li>
         <li class="nav-item">
        <a class="nav-link" href="{{ path('app_profile') }}">Mon Profil</a>
    </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_login') }}">Sign In</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_register') }}">Sign Up</a>
      
    {% endif %}
</ul>
                    </div>
                </div>
            </nav>
        {% endif %}

        {% block body %}{% endblock %}
    </body>
</html>